<div class="container portfolio_container">
  <div class="row">
    
    <div class="col-md-7">
      <%= portfolio_link(@portfolio_item) %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>  
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
      <hr>
      <%= link_to "View code on Github", @portfolio_item.github_url, target: "_blank", class: "btn btn-info" %>
    </div>
  </div>
</div>