<h1>Create a new Portfolio Item</h1>

<%= form_with(model: @portfolio_item) do |form| %>
  
  <div class="field">
    <%= form.label :title %>
    </br>
    <%= form.text_field :title, id: :blog_title %>
     <hr>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    </br>
    <%= form.text_field :subtitle, id: :blog_title %>
     <hr>
  </div>

  <div class="field">
    <%= form.label :body %>
    </br>
    <%= form.text_area :body, id: :blog_body %>
     <hr>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>